extends ../layout

block content

  h1.text-center Create a CodeReps Account

  .row
    .col-sm-8.col-sm-offset-2
      form(action='/users/signup', method='post')
        .form-group
          label.form-control-label(for='username') Username
          input.form-control(type='text', name='username', placeholder='Username', required)
        .form-group
          label.form-control-label(for='name') Name
          input.form-control(type='text', name='name', placeholder='Name', required)
        .form-group
          label.form-control-label(for='email') Email Address
          input.form-control(type='text', name='email', placeholder='Email', required)
        .form-group
          label.form-control-label(for='password') Password
          input.form-control(type='password', name='password', placeholder='Password', required)

        button(class='btn btn-lg btn-primary btn-block', type='submit') Create

  .row
    .col-sm-8.col-sm-offset-2
      h4.text-center Already have an account?
        a(href='/users/login')  Log In

  .row
    .col-sm-8.col-sm-offset-2
      hr
      h3.text-center or
      a(href="/auth/github")
        button.btn.btn-default.github-auth Sign Up with Github

    if message
      h1.text-center.error-message #{message}
